<h1 class="text-center text-4xl mt-36 text-gray-800" >交易清單</h1>
<div class="antialiased text-gray-600 px-4">
  <div class="flex flex-col justify-center h-2/6 my-10">
    <div class="w-full max-w-2xl mx-auto bg-white shadow-lg rounded-sm border border-gray-200">
      <div class="p-3">
        <div class="overflow-x-auto">
          <table class="table w-full mx-auto">
            <!-- head -->
            <thead class="text-xs font-semibold text-white bg-blue-800">
              <tr>
                <th class="p-2 whitespace-nowrap text-lg">訂單編號</th>
                <th class="p-2 whitespace-nowrap text-lg">商品名稱</th>
                <th class="p-2 whitespace-nowrap text-lg">商品價格</th>
                <th class="p-2 whitespace-nowrap text-lg">訂單狀態</th>
              </tr>
            </thead>

            <tbody class="text-sm divide-y divide-gray-100">
              <% @records.each do |record| %>
                <tr class="hover:bg-blue-300 hover:shadow-2xl text-center p-10 transition ease-out duration-100">
                  <td class="p-2 whitespace-nowrap">
                    <div class="font-medium text-gray-800">
                      <%= record.id %>
                    </div>
                  </td>
                  <td class="p-2 whitespace-nowrap">
                    <div class="font-medium text-gray-800">
                    <%= record.description %>
                    </div>
                  </td>
                  <td class="p-2 whitespace-nowrap">
                    <div class="font-medium text-gray-800">
                      <%= record.price %>
                    </div>
                  </td>
                  <td class="p-2 whitespace-nowrap">
                    <div class="font-medium text-gray-800">
                      <%= record.status %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


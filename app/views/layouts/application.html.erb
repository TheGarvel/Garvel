<!DOCTYPE html>
<html>
  <head>
    <title>Gavel</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class ="bg-gray-100">
    <input type="checkbox" id="menu_control">
    <div id="nav" class="bg-gray-900 h-16 flex items-center">
      <div class="flex items-center">
          <%=image_tag("gavel_logo.png", alt: "Gavel logo",class:"logo w-12 ml-4 cursor-pointer")%>
          <p class="Gavel text-gray-200 text-2xl font-mono font-bold pl-2 cursor-pointer">Gavel</p>
      </div>

      <div class="text text-white xl:ml-28">
        <% if policy(:application).buyer_without_email_authenticate %>
          <ul>
            <%= link_to "成為賣家", :new_sms_auth_registration  ,class:"xl:mx-0 hover:text-blue-500"%>
            <li>
              <%= link_to "買家中心", "#" ,class:" xl:mx-0 hover:text-blue-500"%>
              <ul class="sub-nav">
                <li><%= link_to "個人資訊", user_path(current_user.id) ,class:"xl:text-center hover:text-blue-500"%></li>
                <li><%= link_to "得標紀錄", "#" ,class:" xl:mx-0 hover:text-blue-500"%></li>
                <li><%= link_to "交易紀錄", "#" ,class:" xl:mx-0 hover:text-blue-500"%></li>
              </ul>
            </li>
          </ul>
          <%= link_to "登出", user_sessions_path, method: "delete", class:"xl:mx-1 hover:text-blue-500"%>
        <% elsif policy(:application).seller %>
          <ul>
            <li>
              <%= link_to "賣家中心", "#", class:"xl:mx-0 hover:text-blue-500"%>
              <ul class="sub-nav">
                <li><%= link_to "我的商品", own_products_path, class:"xl:mx-0 hover:text-blue-500"%></li>
                <li><%= link_to "已賣清單", "#", class:"xl:mx-0 hover:text-blue-500"%></li>
                <li><%= link_to "成交紀錄", "#", class:"xl:mx-0 hover:text-blue-500"%></li>
              </ul>
            </li>
            <li>
              <%= link_to "買家中心", "#" ,class:" xl:mx-0 hover:text-blue-500"%>
              <ul class="sub-nav">
                <li><%= link_to "個人資訊", user_path(current_user.id) ,class:"xl:text-center hover:text-blue-500"%></li>
                <li><%= link_to "得標紀錄", "#" ,class:" xl:mx-0 hover:text-blue-500"%></li>
                <li><%= link_to "交易紀錄", "#" ,class:" xl:mx-0 hover:text-blue-500"%></li>
              </ul>
            </li>
          </ul>
          <%= link_to "登出", user_sessions_path, method: "delete", class:"xl:mx-1 hover:text-blue-500"%>
        <% else %>
          <%= link_to "註冊", new_user_path ,class:"hover:text-blue-500"%>
          <%= link_to "登入", new_user_session_path ,class:"hover:text-blue-500"%>
        <% end %>
      </div>

      <label for="menu_control" class="menu_btn">
        <div class="btn"></div>
      </labal>
    </div>
      <%= render "shared/flash" if flash %>
    </div>
    <%= yield %>
  </body>
</html>

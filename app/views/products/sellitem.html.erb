<h1 class="text-center text-4xl mt-36">成交清單</h1>
<% if @products.any? %>
<div class="w-10/12 mx-auto">
  <div id="products" class="orderlist mt-5">
    <table class="bg-white rounded-2xl shadow-xl">
      <thead class="bg-blue-500 text-white text-lg">
        <tr class="text-center shadow-xl">
          <th id="product-name" class="py-4 px-6 whitespace-nowrap rounded-tl-xl">
            <span>已結標商品</span>
          </th>
          <th id="product-bid" class=" py-4 px-6 whitespace-nowrap">
            <span>結標金額</span>
          </th>
          <th id="product-time" class=" py-4 px-6 whitespace-nowrap">
            <span>結標時間</span>
          </th>
          <th id="product-status" class="py-4 px-6 whitespace-nowrap">
            <span>訂單狀態</span>
          </th>
          <th class="py-4 px-6 whitespace-nowrap rounded-tr-xl">
            <span>買家名稱</span>
        </th>
        <th id="product-bid" class=" py-3 px-6 ">
          <span>結標金額</span>
        </th>
        <th id="product-time" class=" py-3 px-6 ">
          <span>結標時間</span>
        </th>
        <th id="product-status" class=" py-3 px-6 ">
          <span>商品狀態</span>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr class="text-center text-lg border-b-2 border-b-gray-200">
          <td class="py-3 px-6"><%= product.name %></td>
          <td class="py-3 px-6"><%= product.records.last.bid %></td>
          <td class="py-3 px-6"><%= product.records.last.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td class="py-3 px-6"><%= product.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

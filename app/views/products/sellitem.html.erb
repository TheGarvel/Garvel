<h1 class="text-center text-4xl mt-10">已賣清單</h1>
<% if @products.any? %>
<div id="products" class="container mx-auto mt-5 overflow-x-auto">
  <table class="w-10/12 bg-white mx-auto md:rounded-2xl shadow-xl overflow-hidden">
    <thead class="bg-gavel-blue text-white text-lg">
      <tr class="mx-auto text-center shadow-xl">
        <th id="product-name" class="py-4 px-6 whitespace-nowrap">
          <span>已結標商品</span>
        </th>
        <th id="product-bid" class=" py-4 px-6 whitespace-nowrap">
          <span>結標金額</span>
        </th>
        <th id="product-time" class=" py-4 px-6 whitespace-nowrap">
          <span>結標時間</span>
        </th>
        <th id="product-status" class="py-4 px-6 whitespace-nowrap">
          <span>商品狀態</span>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>  
        <tr class="text-center text-lg border-b-2 border-b-gray-200">
          <td class="py-6 px-6"><%= product.name %></td>
          <td class="py-6 px-6"><%= product.records.last.bid %></td>
          <td class="py-6 px-6 whitespace-nowrap"><%= product.room.end_time.strftime("%Y-%m-%d %H:%M") %></td>
          <td class="py-6 px-6"><%= product.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
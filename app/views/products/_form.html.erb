<%= form_with(model: product) do |form|%>

  <div class="field">
    <%= form.label "商品名稱:" %>
    <%= form.text_field :name %>
  </div>

  <div class="field flex items-start">
    <%= form.label :description ,"商品描述:"%>
    <%= form.text_area :description ,size: "24x6"%>
  </div>

  <div class="field">
    <%= form.label :start_price, "起標價格:" %>
    <%= form.text_field :start_price %>
  </div>

  <div class="field">
    <%= form.label :direct_price, "直購價格:" %>
    <%= form.text_field :direct_price %>
  </div>

  <div class="field">
    <%= form.label "狀態:" %>
     <%= form.select :status, Product.all_status %>
  </div>

  <div>
    <%= form.label :images%>
    <%= form.file_field :images , accept: 'image/png,image/gif,image/jpeg', multiple: true%>
  </div>

  <%= fields_for :permission, User.all do |u| %>
    <%= u.text_field :email   %>
  <% end %>
  <%= form.submit%>

<% end %>

<div class="relative bg-gray-100" data-controller="room" data-room= "<%=params['id']%>"  data-user="<%=current_user.id%>">
  <h1 class="text-4xl my-5 text-center"><%= @product.name %></h1>
  <div class="mt-2 mx-auto">
    <div class="flex mx-auto flex-col justify-between" >
      <section class="carousel" data-controller="carousel" >
        <div class="room_container">
          <button id="previous" class="inline-block w-10 h-10 text-md bg-white rounded-full shadow-2xl">＜</button>
          <button id="next" class="inline-block w-10 h-10 text-md bg-white rounded-full shadow-2xl">＞</button>
          <div id="slider" class="slider">
            <% @product.images.each do |image| %>
              <%= image_tag image %>
            <% end %>
          </div>
          <ul id="dots" class="dots">
            <% @product.images.count.times do %>
              <li></li>
            <% end %>
          </ul>
        </div>
      </section>
    <div class="flex justify-center" >
          <button class="mt-10 px-8 py-2 rounded-full bg-gavel-blue hover:bg-blue-800  text-white font-bold" data-controller="copylink" data-copylink-target="link" data-action="click->copylink#copy" >
            <%= link_to raw('<i class="fa-solid fa-share-nodes"> <span>分享</span></i>'), '#', data: {action: "click->copylink#copy", url: @url } %>
          </button>
    </div>
    <div class="text-lg text-center w-full mt-5 text-black py-5 bg-gray-200 " >
      <span>拍賣剩餘時間：</span>
      <span data-controller="countdown" data-countdown-message-value="${days} 天 ${hours} 小時 ${minutes} 分鐘 ${seconds} 秒" data-countdown-date-value="<%= @room.end_time %>" class="text-black">...</span>
    </div>

      <div class="flex items-center justify-center h-20 border-b ">
        <span class="rounded-md text-gavel-blue font-medium text-2xl text-center px-4 py-2" data-room-target="currentprice">目前最高價：<span class="font-bold" >$<%= @room.record.any? ? @room.record.last.bid : @room.product.start_price %></span></span>
      </div>

      </div>
      <p class="text-center mt-5 text-lg text-gray-500" >賣家資訊</p>
      <div class="mt-2 flex flex-col items-center ">
        <%= image_tag(@product.user.avatar, width:50, class:"bg-white rounded-full" ) %>
        <span class="mt-2 hover:text-gavel-blue" ><%= @product.user.username %></span>
      </div>

      <div class="bg-white mx-auto rounded-2xl w-11/12 m-5 p-5">
        <div class="product_information" >
          <h3 class="ml-5 text-2xl">產品詳情</h3>
          <p class="border-b-2 text-md p-5 break-words"><%= @product.description %></p>
        </div>
        <div class="bid_information" >
          <h3 class="ml-5 mt-5 text-2xl mb-5" >競標資訊</h3>
          <p class="ml-5 text-md text-gray-500" >商品起標價：<span class="ml-32 text-gray-900 font-bold hover:text-gavel-blue" >$<%= @room.product.start_price %></span></p>
          <p class="ml-5 mx-20 mt-2 text-md text-gray-500" >最低每標價：<span class="ml-32 text-gray-900 font-bold hover:text-gavel-blue" >$<%= @room.product.start_price %></span></p>
          <p class="ml-5 mt-2 text-md text-gray-500" >出價排名：</p>
          <div data-room-target="biduser" class="flex justify-around mt-5 w-full overflow-auto">
          </div>
        </div>
      </div>

  <div class="bg-white mt-5 mb-24 rounded-2xl mx-auto p-5 w-10/12">
      <span class="flex justify-center text-xl pb-5 border-b-4 ">房間聊天室</span>
      <div data-room-target="messagescontainer" class="overflow-auto h-[400px]"></div>
      <input type="text" data-room-target="message" class="rounded-xl px-2 border-4 w-7/12 sm:py-3" placeholder="賣家隨時為您解答">
      <button class="px-8 ml-5 rounded-full bg-blue-200 text-gray-800 font-bold p-2 uppercase" data-action="click->room#chat">發送</button>
  </div>

  <div class="fixed bottom-0 right-0 left-0 flex justify-around items-center rounded-lg bg-white box-border h-20 shadow-2xl">
    <span class="text-sm"  >拍賣剩餘時間：</span>
      <span class="text-sm" data-controller="countdown" data-countdown-message-value="${days} 天 ${hours} 小時 ${minutes} 分鐘 ${seconds} 秒" data-countdown-date-value="<%= @room.end_time %>" class="text-black">...</span>
    <button class="bg-gavel-blue text-white rounded-2xl p-2 h-10 w-32" data-action="click->room#showModal" >我要出價</button>
  </div>
  
  <div class="modal" data-controller="bid" data-room-target="modal" >
    <div class="content">
      <div class="bid_now mx-auto bg-gray-200 text-gray-700 shadow-2xl rounded-lg" data-bid-target="bid" >
        <div class="bid_information" >
          <div class="relative flex items-center justify-center bg-white text-2xl mb-5 rounded-lg h-20" >
            <span>競標資訊</span>
            <button class="absolute right-5 text-4xl" data-action="click->room#closeModal" ><i class="fas fa-window-close"></i></button>
          </div>
          <p class="text-center text-md text-gray-500" >商品起標價：<span class="text-gray-900 font-bold hover:text-gavel-blue" >$<%= @room.product.start_price %></span></p>
          <p class="text-center mt-2 text-md text-gray-500" >最低每標價：<span class="text-gray-900 font-bold hover:text-gavel-blue" >$<%= @room.product.start_price %></span></p>
          <p class="ml-5 mt-5 text-md text-gray-500" >出價排名：</p>
          <div data-room-target="biduser" class="flex justify-evenly mt-5 w-full overflow-auto">
          </div>
        </div>
        <div class="text-2xl rounded-lg flex w-full justify-center py-5 bg-white">設定金額</div>
        <div class="py-5 px-5" >
          <div class="flex justify-between text-sm px-5" ><span>目前最高價</span><span>我的出價</span></div>
          <div class="flex justify-center">
            <span class="text-xl leading-10">$</span>
            <span class="text-xl leading-10"
                  data-room-target="currentprice"
                  data-bid-target="currentprice">
                  <%= @room.record.any? ? @room.record.last.bid : @room.product.start_price %>
                  
            </span>
            <span class="text-xl leading-9 mx-2">+</span>
            <input type="number" data-bid-target="input" data-room-target="yourprice"
            value="<%= @room.product.basicprice %>" min="<%= @room.product.basicprice %>" class=" w-6/12 text-xl border rounded-xl py-2 leading-tight text-gray-700 focus:outline-none focus:shadow-outline text-center" placeholder="輸入您的出價">
            <span class="text-xl leading-10 mx-2">=</span>
            <span class="text-2xl leading-10">$</span>
            <span data-room-target="finalprice"
                  data-bid-target="finalprice"
                  class="text-2xl leading-10">
            </span>
          </div>
          <div class="flex justify-center mt-5" >
            <button data-action="click->bid#plus100" class="shadow text-gray-700 rounded-xl font-bold bg-white hover:bg-gray-300 py-2 px-3">+100</button>
            <button data-action="click->bid#plus500" class="shadow text-gray-700 rounded-xl bg-white font-bold hover:bg-gray-300 py-2 px-3 mx-5">+500</button>
            <button data-action="click->bid#plus1000" class="shadow text-gray-700 rounded-xl bg-white font-bold hover:bg-gray-300 py-2 px-3">+1000</button>
          </div>

          <div class="flex justify-center">
            <button type="button" class="bg-gavel-blue text-white rounded-full px-5 w-15 h-10 mt-10 shadow-lg hover:bg-blue-800" data-action="click->room#bid" >確認出價！</button>
          </div>
        </div>
    </div>
  </div>

</div>

